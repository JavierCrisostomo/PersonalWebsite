@using System.Security.Claims @*Warning workaround*@

@if (User.Identity.IsAuthenticated)
{
    <form asp-controller="Account" asp-action="LogOff" asp-route-area="Private" method="post" id="logoutForm">
        <a asp-route-area="Private" asp-controller="Manage" asp-action="Index" title="Manage">Привет, @User.Identity.Name!</a>
        <button type="submit" class="btn btn-link navbar-btn navbar-link logout--button">Выход</button>
    </form>
}
else
{
    <a asp-route-area="Private" asp-controller="Account" asp-action="Login">Вход на сайт</a>
}
