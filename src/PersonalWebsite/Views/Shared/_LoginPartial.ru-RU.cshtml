@using System.Security.Claims @*Warning workaround*@

@if (User.IsSignedIn())
{
    <form asp-route-area="Private" asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm">
        <a asp-controller="Manage" asp-action="Index" title="Manage">Привет, @User.GetUserName()!</a>
        <button type="submit" class="btn btn-link navbar-btn navbar-link logout--button">Выход</button>
    </form>
}
else
{
    <a asp-route-area="Private" asp-controller="Account" asp-action="Login">Вход на сайт</a>
}
